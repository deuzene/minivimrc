filetype plugin indent on
syntax on
silent! runtime macros/matchit.vim
set backspace=indent,eol,start
set foldmethod=manual
set hidden
set incsearch
set laststatus=2
set nocompatible
set ruler
set switchbuf=useopen,usetab
set tags=./tags;/,tags;/
set wildmenu
set wildcharm=<C-z>
nnoremap !e :edit **/*<C-z>
nnoremap !b :buffer <C-z>
nnoremap !t :tag /
